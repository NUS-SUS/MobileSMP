<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mobilesmp">

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>
    </queries>

    <application
        android:name=".MobileSMP"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileSMP"
        tools:targetApi="31">
        <activity
            android:name=".FeedbackActivity"
            android:exported="false"
            android:label="@string/title_activity_feedback"
            android:theme="@style/Theme.MobileSMP.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.MobileSMP.NoActionBar" />
        <activity
            android:name=".CampaignActivity"
            android:exported="false"
            android:label="@string/title_activity_campaign"
            android:theme="@style/Theme.MobileSMP.NoActionBar" />
        <activity
            android:name=".DiscoverActivity"
            android:exported="false"
            android:label="@string/title_activity_discover"
            android:theme="@style/Theme.MobileSMP.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.MobileSMP.NoActionBar" />
        <activity
            android:name=".CallbackActivity"
            android:exported="false" /> <!-- <activity -->
        <!-- android:name=".LogoutActivity" -->
        <!-- android:exported="false"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.VIEW" /> -->
        <!-- <category android:name="android.intent.category.DEFAULT" /> -->
        <!-- <category android:name="android.intent.category.BROWSABLE" /> -->
        <!-- <data -->
        <!-- android:host="signout" -->
        <!-- android:scheme="mobilesmpb33ab97c-b33ab97c" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amplifyframework.auth.cognito.activities.HostedUIRedirectActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="mobilesmpb33ab97c-b33ab97c" />
            </intent-filter>
        </activity>
    </application>

</manifest>