<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.Payment1Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewPayment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/payment_desc1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_10"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#EAA71B"
        android:text="$10 Credits"
        app:layout_constraintEnd_toStartOf="@+id/button_50"
        app:layout_constraintTop_toTopOf="@+id/button_50" />

    <Button
        android:id="@+id/button_50"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#EAA71B"
        android:text="$50 Credits"
        app:layout_constraintEnd_toStartOf="@+id/button_100"
        app:layout_constraintTop_toTopOf="@+id/button_100"
        />

    <Button
        android:id="@+id/button_100"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#EAA71B"
        android:text="$100 Credits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</FrameLayout>